<%= render "shared/header" %>

<div class="contents">
  <div class="first-view">
    <%= image_tag "topimage.png", class:"top-image" %>
    <ul class='budgets-lists'>
      <% if @budgets.present? %>
        <% @budgets.each do |budget| %>
          <li class='list'>
          <%= budget %>
          </li>
        <% end %>
      <% else %>
        <li class='list'>
          sample
        </li>
      <% end %>
    </ul>
    <%= image_tag "plus.png", class:"plus-image" %>
  </div>
</div>

<%= render "shared/footer" %>