    <%= form_with(model: budget, local: true) do |form| %>
      <%= render 'shared/error_messages', model: form.object %>

      <div class="budgets_container">
        <div class='budgets_set'>
          <div class='budgets-date'>
            <span>期間　　： </span>
            <%= form.text_field :first_date, placeholder: "例）2023-10-01", id: "first_date", autocomplete: 'off', class: "date-text" %>
            <span>　～　</span>
            <%= form.text_field :last_date, placeholder: "例）2023-10-31", id: "last_date", autocomplete: 'off', class: "date-text" %>
          </div>

          <div class='budgets-yen'>
            <span>予算　　：</span>
            <%= form.text_field :budgets, placeholder: "例）30000", autocomplete: 'off', class: "budget-text" %>
            <span>円</span>
          </div>
          <div class='budgets-users'>
            <span>ユーザ数： </span>
            <%= form.text_field :users, placeholder: "例）2", class: "users-text" %>
            <span>人</span>
          </div>
          <div class='budgets-btn'>
            <%= form.submit "設定", class:"set-red-btn" %>
          </div>
        </div>
      </div>
    <% end %>