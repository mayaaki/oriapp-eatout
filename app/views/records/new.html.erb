<div class="records_contents">
  <header class='second-header'>
    <%= link_to image_tag("logo.png", class:"first-logo"), "/" %>
  </header>
  <div class="records_main">
    <h4><%= link_to "記録を追加", budget_records_path(@budget.id), data: { turbo: false} %></h4>
    <%= form_with(model: [@budget, @record], url: budget_records_path(@budget.id), local: true) do |form| %>
      <%= render partial: "form", locals: { record: @record, budget:@budget, form: form } %>
    <% end %>
  </div>
  <%= render "shared/footer" %>
</div>

