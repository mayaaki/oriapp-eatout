<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class="header">
  <div class="inner">
    <div class="nav">
      <div class="logo">
        <%= link_to image_tag('logo.png', class:"logo-image"), root_path %>
      </div>
      <div class="user_nav">
        <span>
          <ul class="user_info">
            <% if user_signed_in? %>
              <div class="user_nickname">
                ようこそ、<%= current_user.nickname%>　さん
              </div>
              <li>
                <%= link_to "マイページ", user_path(current_user.id), class: :nav__btn %>
                <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: :nav__btn %>
              </li>
            <% else %>
              <li>
                <%= link_to 'ログイン', new_user_session_path, class: :nav__btn %>
                <%= link_to '新規登録', new_user_registration_path, class: :nav__btn %>
              </li>
            <% end %>
          </ul>
        </span>
      </div>
    </div>
  </div>
</header>